{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "src/schema/index.ts"
    ]
  },
  "rules": {
    "interface-over-type-literal": false,
    "no-console": [
      false,
      "log",
      "error",
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "interface-name": false,
    "semicolon": [true, "never"]
  }
}
